@model GYM_Manage.Models.NguoiDung
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center py-4">
                    <h3 class="fw-bold mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>Đăng Ký Tài Khoản
                    </h3>
                    <p class="mb-0 mt-2">Tham gia cùng chúng tôi để bắt đầu hành trình sức khỏe của bạn</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <span class="badge bg-dark p-2 px-3 rounded-pill">Thông tin cá nhân</span>
                    </div>
                    
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4 alert alert-danger"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="HoTen" class="form-control" id="hoTen" placeholder="Họ và tên" required>
                            <label for="hoTen">Họ và tên</label>
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" id="email" placeholder="Email" required>
                            <label for="email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="text-center my-4">
                            <span class="badge bg-dark p-2 px-3 rounded-pill">Thông tin tài khoản</span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="TenDangNhap" class="form-control" id="tenDangNhap" placeholder="Tên đăng nhập" required>
                            <label for="tenDangNhap">Tên đăng nhập</label>
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="MatKhau" type="password" class="form-control" id="matKhau" placeholder="Mật khẩu" required>
                                    <label for="matKhau">Mật khẩu</label>
                                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="xacNhanMatKhau" placeholder="Xác nhận" required>
                                    <label for="xacNhanMatKhau">Xác nhận mật khẩu</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="dieuKhoan" required>
                            <label class="form-check-label" for="dieuKhoan">
                                Tôi đồng ý với <a href="#" class="text-decoration-none">điều khoản sử dụng</a> và <a href="#" class="text-decoration-none">chính sách bảo mật</a>
                            </label>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg">
                                <i class="bi bi-check-circle-fill me-2"></i>Đăng Ký
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <div class="small">
                        <p class="mb-0">Đã có tài khoản? <a href="@Url.Action("Login", "Auth")" class="text-decoration-none">Đăng nhập ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #212529;
            background-image: linear-gradient(135deg, #2c3034 0%, #212529 100%);
            min-height: 100vh;
        }
        .card {
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.3);
        }
        .card-header {
            border-radius: 0;
        }
        .btn-dark {
            transition: all 0.3s;
        }
        .btn-dark:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .form-floating>.form-control:focus~label,
        .form-floating>.form-control:not(:placeholder-shown)~label {
            color: #212529;
        }
        .form-control:focus {
            border-color: #212529;
            box-shadow: 0 0 0 0.25rem rgba(33, 37, 41, 0.25);
        }
    </style>
}
